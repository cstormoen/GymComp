@model GymComp.Web.Models.Workout

@using (Html.BeginForm("Create", "Workouts", FormMethod.Post, new { @class = "form-inline", role = "form" })) 
{
    @Html.AntiForgeryToken()
    <div class="row" style="padding-left: 45px;">
        <div class="form-group">
            <div class="input-group date">
                @Html.EditorFor(model => model.Trained, new { htmlAttributes = new { @class = "form-control", @type = "text", @placeholder = "dd/mm/yyyy" } })
                <span class="input-group-addon">
                    <i class="fa fa-calendar"></i>
                </span>
            </div>
        </div>
        <div class="form-group">
            <input type="submit" value="@Html.Raw(GymComp.Web.Resources.Strings.Add)" class="btn btn-success" />
        </div>
    </div>
    <div class="row" style="padding-left: 30px;">
        <div class="col-md-8">
            @Html.ValidationMessageFor(model => model.Trained, "", new { @class = "text-danger" })

            @if (TempData["WorkoutCreated"] != null)
            {
                <p class="text-success">
                    @Html.Raw(GymComp.Web.Resources.Strings.WorkoutAdded)
                </p>
            }
        </div>
    </div>
}